<Page x:Class="CoffeeShop.AdminLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeeShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminLogin">

    <Grid>
        <Label Margin="0,100,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Background="BurlyWood" Foreground="Black" FontSize="16">Username</Label>
        <TextBox x:Name="Username" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,140,0,0" FontSize="16" Width="300" Background="BurlyWood" Foreground="Black"></TextBox>

        <Label Margin="0,200,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Background="BurlyWood" Foreground="Black">Password</Label>
        <PasswordBox x:Name="Password" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,240,0,0" FontSize="16" Width="300" Background="BurlyWood" Foreground="Black"></PasswordBox>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,200,0,0" FontSize="16" Width="80" Click="LoginClick" Background="BurlyWood" Foreground="Black">Login</Button>
        
    </Grid>
</Page>
